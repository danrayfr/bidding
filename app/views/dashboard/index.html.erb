<% provide(:title, "Dashboard")%>

<%= render "sidebar" %>
<div class="p-4 sm:ml-64">
   <div class="p-4 border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700">
    <h1 class="text-5xl font-semibold text-center text-gray-700">Bidding Table</h1>
   </div>
    <br>
   <div class="relative overflow-x-auto shadow-md sm:rounded-lg">

      </div>
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
              <tr>
                  <th scope="col" class="px-6 py-3">
                      Product ID
                  </th>
               <th scope="col" class="px-6 py-3">
                   Product name
               </th>
               <th scope="col" class="px-6 py-3">
                   <div class="flex items-center">
                       Lowest Bid
                       <a href="#"><svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 ml-1" aria-hidden="true" fill="currentColor" viewBox="0 0 320 512"><path d="M27.66 224h264.7c24.6 0 36.89-29.78 19.54-47.12l-132.3-136.8c-5.406-5.406-12.47-8.107-19.53-8.107c-7.055 0-14.09 2.701-19.45 8.107L8.119 176.9C-9.229 194.2 3.055 224 27.66 224zM292.3 288H27.66c-24.6 0-36.89 29.77-19.54 47.12l132.5 136.8C145.9 477.3 152.1 480 160 480c7.053 0 14.12-2.703 19.53-8.109l132.3-136.8C329.2 317.8 316.9 288 292.3 288z"/></svg></a>
                   </div>
               </th>
               <th scope="col" class="px-6 py-3">
                   <div class="flex items-center">
                       Starting Bid
                       <a href="#"><svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 ml-1" aria-hidden="true" fill="currentColor" viewBox="0 0 320 512"><path d="M27.66 224h264.7c24.6 0 36.89-29.78 19.54-47.12l-132.3-136.8c-5.406-5.406-12.47-8.107-19.53-8.107c-7.055 0-14.09 2.701-19.45 8.107L8.119 176.9C-9.229 194.2 3.055 224 27.66 224zM292.3 288H27.66c-24.6 0-36.89 29.77-19.54 47.12l132.5 136.8C145.9 477.3 152.1 480 160 480c7.053 0 14.12-2.703 19.53-8.109l132.3-136.8C329.2 317.8 316.9 288 292.3 288z"/></svg></a>
                   </div>
               </th>
               <th scope="col" class="px-6 py-3">
                   <div class="flex items-center">
                       Bidder's Offer
                       <a href="#"><svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 ml-1" aria-hidden="true" fill="currentColor" viewBox="0 0 320 512"><path d="M27.66 224h264.7c24.6 0 36.89-29.78 19.54-47.12l-132.3-136.8c-5.406-5.406-12.47-8.107-19.53-8.107c-7.055 0-14.09 2.701-19.45 8.107L8.119 176.9C-9.229 194.2 3.055 224 27.66 224zM292.3 288H27.66c-24.6 0-36.89 29.77-19.54 47.12l132.5 136.8C145.9 477.3 152.1 480 160 480c7.053 0 14.12-2.703 19.53-8.109l132.3-136.8C329.2 317.8 316.9 288 292.3 288z"/></svg></a>
                   </div>
               </th>
                <th scope="col" class="px-6 py-3">
                   <div class="flex items-center">
                       Bidder's Name
                       <a href="#"><svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 ml-1" aria-hidden="true" fill="currentColor" viewBox="0 0 320 512"><path d="M27.66 224h264.7c24.6 0 36.89-29.78 19.54-47.12l-132.3-136.8c-5.406-5.406-12.47-8.107-19.53-8.107c-7.055 0-14.09 2.701-19.45 8.107L8.119 176.9C-9.229 194.2 3.055 224 27.66 224zM292.3 288H27.66c-24.6 0-36.89 29.77-19.54 47.12l132.5 136.8C145.9 477.3 152.1 480 160 480c7.053 0 14.12-2.703 19.53-8.109l132.3-136.8C329.2 317.8 316.9 288 292.3 288z"/></svg></a>
                   </div>
               </th>
               <th scope="col" class="px-6 py-3">
                   <span class="sr-only">Edit</span>
               </th>
           </tr>
       </thead>
       <% @bids.each do |bid| %>
       <tbody>
           <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
               <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                   <%= bid.product.id %>
               </th>
               <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                   <%= link_to bid.product.name, dashboard_path(bid.product.id) %>
               </th>
               <td class="px-6 py-4">
                   $<%= bid.product.lowest_bid %>
               </td>
               <td class="px-6 py-4">
                   $<%= bid.product.starting_bid %>
               </td>
               <td class="px-6 py-4">
                   $<%= bid.bid_offer_amount %>
               </td>
               <td class="px-6 py-4">
                   <%= bid.user.full_name %>
               </td>
               <td class="px-6 py-4 text-right">
                   <%= link_to 'Update Bid', edit_product_bid_path(bid.product, bid), class:"font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
               </td>
           </tr>
       </tbody>
       <% end %>
   </table>
  </div>
</div>