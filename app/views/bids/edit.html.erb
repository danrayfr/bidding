<% provide(:title, "Update Bid")%>
<div class="px-12 pb-10">
  <div class="mb-4">
    <h2 class="font-bold text-5xl text-gray-800 text-center">Update Bid</h2>
  </div>
  <%= form_with(model: [ @product, @bid ]) do |f| %>

  <div class="mb-2">
    <%= f.label :Offer_Amount, class:"block text-sm font-medium text-gray-900"%><br />
    <%= f.text_field :bid_offer_amount, class:"-mt-3 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5" %>
  </div>

  <div class="mt-2">
    <%= f.submit "Update Bid", class:"text-white bg-teal-600 hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-teal-300 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center" %>
  </div>
<% end %>
</div>