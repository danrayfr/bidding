<% provide(:title, "Sign Up")%>
<div class="px-12 pb-10">
  <div class="mb-4">
    <h2 class="font-bold text-5xl text-gray-800 text-center">Sign up</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-2">
      <%= f.label :email, class:"block text-sm font-medium text-gray-900"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"-mt-3 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5"%>
    </div>

    <div class="mb-2">
      <%= f.label :first_name,  class:"block text-sm font-medium text-gray-900" %><br />
      <%= f.text_field :first_name, class:"-mt-2 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5"  %>
    </div>

    <div class="mb-2">
      <%= f.label :last_name,  class:"block text-sm font-medium text-gray-900" %><br />
      <%= f.text_field :last_name, class:"-mt-3 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5"  %>
    </div>

    <div class="mb-2">
      <%= f.label :password,  class:"block text-sm font-medium text-gray-900" %>
      <% if @minimum_password_length %>
      <em class="block mb-2 text-sm font-medium text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"-mt-3 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5" %>
    </div>

    <div class="mb-2">
      <%= f.label :password_confirmation,  class:"block text-sm font-medium text-gray-900" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"-mt-3 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"text-white bg-teal-600 hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-teal-300 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center" %>
    </div>
  <% end %>
    <%= render "devise/shared/links" %>
  </div>
