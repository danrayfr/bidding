<% provide(:title, "New Product")%>
<div class="px-12 pb-10">
  <div class="mb-4">
    <h2 class="font-bold text-5xl text-gray-800 text-center">New Product</h2>
  </div>

<%= form_with(model: @product) do |f| %>
  
  <div class="mb-2">
    <%= f.label :name, class:"block text-sm font-medium text-gray-900"%><br />
    <%= f.text_field :name, class:"-mt-3 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5" %>
  </div>

  <div class="mb-2">
    <%= f.label :description, class:"block text-sm font-medium text-gray-900"%><br />
    <%= f.text_area :description, class:"-mt-3 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5" %>
  </div>

  <div class="mb-2">
    <%= f.label :lowest_bid, class:"block text-sm font-medium text-gray-900"%><br />
    <%= f.text_field :lowest_bid, class:"-mt-3 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5" %>
  </div>

  <div class="mb-8">
    <%= f.label :starting_bid, class:"block text-sm font-medium text-gray-900"%><br />
    <%= f.text_field :starting_bid, class:"-mt-3 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5" %>
  </div>

   <div class="mb-8">
    <%= f.label :bidding_expiration, class:"block text-sm font-medium text-gray-900"%><br />
    <%= f.date_field :bidding_expiration, "data-provide" => 'datepicker',  class:"-mt-3 border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block w-full p-2.5" %>
  </div>

  <div class="mb-8">
   <%= f.check_box :is_active, label: false, as: :boolean, class: 'border-gray-300 text-gray-800 text-sm rounded-lg focus:ring-teal-600 focus:border-teal-600 block p-2.5' %>
   <span ckass="text-sm font-medium text-gray-900 ">Active</span>
  </div>

  <div class="mt-2">
    <%= f.submit "Create", class:"text-white bg-teal-600 hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-teal-300 font-medium rounded-lg text-sm w-full px-5 py-2.5 text-center" %>
  </div>
<% end %>

</div>