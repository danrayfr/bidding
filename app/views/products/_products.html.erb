<div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">
  <div>
    <%= image_tag("https://source.unsplash.com/random/350x350", class: "w-full object-cover object-center rounded-lg shadow-md")%>
    <div class="relative px-4 -mt-16">
      
      <div class="bg-white p-6 rounded-lg shadow-lg">
        <div class="flex items-baseline">
          <% if product.is_active %>
            <span class="bg-teal-200 text-teal-800 text-xs px-2 inline-block rounded-full  uppercase font-semibold tracking-wide">
              Open
            </span>
          <% else %>
            <span class="bg-red-200 text-red-800 text-xs px-2 inline-block rounded-full  uppercase font-semibold tracking-wide">
              Closed
            </span>
          <% end %>
          <div class="ml-2 text-gray-600 uppercase text-xs font-semibold tracking-wider">
            Closing on  &bull; <%= product.bidding_expiration.strftime("%B %d %Y %H:%M")%>
          </div>
        </div>
        <h4 class="mt-1 text-xl font-semibold uppercase leading-tight truncate"><%= product.name %></h4>
        <div class="mt-1"><span class="text-gray-600 text-md"><%= product.description.truncate(50) %></span></div>
        <div class="mt-1"><span class="text-gray-500 text-sm" >Lowest Allowable Bid:</span> $<%= product.lowest_bid %></div>
        <div class="mt-1"><span class="text-gray-500 text-sm" >Starting Bidding Price:</span> $<%= product.starting_bid %></div>
        <div class="mt-4">
          <span class="text-teal-600 text-md font-semibold">96 bidders</span>
          <span class="text-sm text-gray-600">(as of today)</span>
        </div>  
         <div class="mt-4">
          <%= link_to "View Product", product_path(product), class:"bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-4 rounded"%>
        </div>
      </div>
    </div>
  </div>
</div>